{
  "global": {
    "node_id": "beam-node-01",             // Unique identifier for this node
    "base_dir": "/home/pi/data",           // Root data directory
    "timezone": "UTC",                     // For consistent timestamps
    "print_debug": true                    // Toggle console messages
  },

  "tsl2591": {
    "enabled": true,                       // Disable if sensor not connected
    "directory": "tsl2591",                // Subfolder inside base_dir
    "file_name": "lux_data.json",          // Output file name
    "i2c_bus": 1,                          // Optional: use if not on default bus
    "record_schema": {                     // (Optional metadata)
      "timestamp": "ISO8601",
      "lux": "float"
    }
  },

  "bme280": {
    "enabled": true,
    "directory": "bme280",
    "file_name": "env_data.json",
    "spi": {
      "sck_pin": "board.SCK",
      "mosi_pin": "board.MOSI",
      "miso_pin": "board.MISO",
      "cs_pin": "board.D5",
      "baudrate": 100000
    },
    "record_schema": {
      "timestamp": "ISO8601",
      "temperature_C": "float",
      "humidity_percent": "float",
      "pressure_hPa": "float"
    }
  }
}
